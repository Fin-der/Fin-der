<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/match_profilePic"
            android:layout_width="335dp"
            android:layout_height="335dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/big_circle"
            android:contentDescription="Profile Pic"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#dfdfdf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="@string/match_name"/>

        <TextView
            android:id="@+id/match_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/match_desc"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/match_name"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/match_accept"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/green_heart"
                android:layout_alignParentRight="true"
                android:contentDescription="Profile Pic" />

            <Button
                android:id="@+id/match_deny"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/cross"
                android:contentDescription="Profile Pic"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>